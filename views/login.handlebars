<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">

      <h3 class="text-center mb-2">Login</h3>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group mb-4">
          <label for="emailInput">Email</label>
          <input type="email" class="form-control" id="emailInput" name="email" aria-describedby="Enter Email">
        </div>
        <div class="form-group mb-4">
          <label for="passwordInput">Password</label>
          <input type="password" class="form-control" id="passwordInput" name="password"
            aria-describedby="Enter Password">
        </div>
        <div class="d-grid gap-2 mb-3">
          <button type="submit" class="btn btn-dark btn-block">Login</button>
        </div>
        <div class="d-grid gap-2">
          <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
        </div>
      </form>

      <p class="lead mt-4">
        No Account ? <a href="/users/register">Register Now</a>
      </p>
    </div>
  </div>
</div>