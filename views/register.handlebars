<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h3 class="text-center mb-2">Register</h3>
      <form action="/users/register" method="POST">

        <div class="form-group mb-4">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" aria-describedby="Your Name">
        </div>

        <div class="form-group mb-4">
          <label for="emailInput">Email</label>
          <input type="text" class="form-control" id="emailInput" aria-describedby="Enter Email">
        </div>

        <div class="form-group mb-4">
          <label for="passwordInput">Password</label>
          <input type="text" class="form-control" id="passwordInput" aria-describedby="Enter Password">
        </div>

        <div class="form-group mb-4">
          <label for="confirmPassword">Confirm Password</label>
          <input type="text" class="form-control" id="confirmPassword" aria-describedby="Confirm Password again">
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-dark btn-block">Register</button>
        </div>

      </form>
      <p class="lead mt-4">
        I have Account <a href="/users/Login">Login</a>
      </p>
    </div>
  </div>
</div>