<div class="container m-5">
  <div class="row justify-content-center">

    <!--AMOUNT-->
    <div class="row justify-content-center mb-3">
      <h1 class="text-center">${{total}}</h1>
    </div>
    <!--CATEGORY-->
    <div class="row justify-content-between mb-3">

      <div class="col-6">
        <form action="/records/new" method="GET">
          <button class="btn btn-secondary" type="submit">新增</button>
        </form>
      </div>
      <div class="col-6">
        <div class="dropdow d-flex justify-content-end" style="display: inline;">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="categoryFilter" data-bs-toggle="dropdown"
            aria-expanded="false">
            支出類別篩選
          </button>
          <ul class="dropdown-menu" aria-labelledby="categoryFilter">
            <li><a class="dropdown-item" href="/">全部支出</a></li>
            <li><a class="dropdown-item" href="/filter/living">家居物業</a></li>
            <li><a class="dropdown-item" href="/filter/traffic">交通出行</a></li>
            <li><a class="dropdown-item" href="/filter/entertainment">休閒娛樂</a></li>
            <li><a class="dropdown-item" href="/filter/foods">餐飲食品</a></li>
            <li><a class="dropdown-item" href="/filter/other">其他支出</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!--LIST-->
    <div class="row justify-content-center">
      <ul class="list-group ">
        {{#each records}}
        <li class="list-group-item">
          <div class="d-flex justify-content-between">

            <div class="d-flex">
              <i class="{{this.icon}} fa-2x me-3" style="color:steelblue"></i>
              <div class="d-flex flex-column">
                <p class="m-0" style="font-size: 0.8em;">{{this.name}}</p>
                <p class="m-0" style="font-size: 0.8em;">{{this.date}}</p>
                <p class="m-0" style="font-size: 0.8em;">{{this.category_cn}}</p>
              </div>
            </div>

            <div class="d-flex">
              <div class="d-flex justify-content-center">
                <p class="text-nowrap">{{this.amount}}</p>
              </div>
            </div>

            <div class="d-flex">
              <div class="d-flex justify-content-end">
                <div class="pe-3">
                  <form action="/records/{{this._id}}" method="GET" style="display:inline">
                    <button class="btn btn-outline-success">
                      <i class="far fa-edit"></i>
                    </button>
                  </form>
                </div>
                <div class="ps-1">
                  <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display:inline">
                    <button class="btn btn-outline-danger">
                      <i class="far fa-minus-square"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>

          </div>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
</div>