<div class="container">
  <div class="row mt-5">
    <form action="/records/{{record._id}}?_method=PUT" method="POST">
      <!--名稱 name-->
      <div class="row mb-3">
        <label for="inputName" class="col-sm-2 col-form-label">名稱</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputName" name="name" placeholder="品項名稱" value="{{record.name}}">
        </div>
      </div>
      <!--日期 date-->
      <div class="input-group mb-3">
        <label for="inputDate" class="col-sm-2 col-form-label">日期</label>
        <input type="date" class="form-control" id="inputDate" name="date" placeholder="年/月/日" value="{{record.date}}">
      </div>
      <!--類別 category-->
      <div class=" input-group mb-3">
        <label for="selectCategory" class="col-sm-2 col-form-label">類別</label>
        <select class="form-select" id="selectCategory" name="category" value="{{record.category}}">
          <option value="居家物業">居家物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
      <!--金額 amount-->
      <div class="row mb-3">
        <label for="inputAmount" class="col-sm-2 col-form-label">金額</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputAmount" name="amount" value="{{record.amount}}">
        </div>
      </div>
      <!--按鈕-->
      <button type="submit">Save</button>
      <a href="/">Back</a>
    </form>
  </div>
</div>